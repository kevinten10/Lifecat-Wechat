.registration-box {
    width: 100%;
    height: 100%;
    font-family: "Helvetica Neue", Arial, "PingFang SC", "Microsoft YaHei", sans-serif;
    display: flex;
    flex-direction: column
}

.top-box{
    height: 30%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.top-inner-box{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: cornflowerblue;
    height: 80%;
    width: 80%;
}

.bottom-box{
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.bottom-box ul{
    width: 100%;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}

.bottom-box ul li{
    padding-top: 10px;
}

.user-text text {
    display: flex;
    justify-content: center;
    width: 300rpx;
}

.user image {
    height: 260rpx;
    width: 260rpx;
    border-radius: 130rpx;
}

.btn {
    flex-direction: column;
    width: 100%;
    padding-top: 20px;
}

.btn image {
    height: 40rpx;
    width: 40rpx;
}

.btn ul {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}

.btn ul li {
    width: 100%;
    padding-top: 20px;
    padding-left: 20px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    font-size: 14px;
}

.footer {
    padding-top: 20px;
    height: 100%;
}

button {
    width: 600rpx;
    margin: 0 auto;
}

label {
    display: flex;
    flex-direction: column
}

label view {
    display: flex;
    margin-top: 20rpx;
}

label view input {
    flex: 1;
    border-bottom: 1px solid #aaa;
}