.registration-box {
    width: 100%;
    height: 100%;
    font-family: "Helvetica Neue", Arial, "PingFang SC", "Microsoft YaHei", sans-serif;
    display: flex;
    flex-direction: column
}

.top-box{
    height: 30%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.top-inner-box{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: cornflowerblue;

    height: 80%;
    width: 80%;

    border-radius: 12px;
    box-shadow: 4px 4px 6px skyblue;

    background: linear-gradient(to bottom right, skyblue , cornflowerblue);
}

.top-inner-box text{
    color: #ffffff;
}

.bottom-box{
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
}

.bottom-box ul{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
}

.bottom-box ul li{
    width: 100%;
    padding-left: 40rpx;
    padding-top: 10rpx;
}

.bottom-box-text{
    width: 33%;
    float: left;
}

.post {
    float: right;
    background-color: #ffffff;
    position: fixed;
    bottom: 20px;
    right: 10px;
    border: 0 solid #ffffff;
    border-radius: 500px;
    box-shadow: 4px 1px 1px #cccccc;
}